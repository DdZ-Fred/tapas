{
  "name": "web-extension-1",
  "private": true,
  "version": "1.0.0",
  "description": "A minimal Web Extension",
  "main": "main.js",
  "scripts": {
    "start": "yarn run clean:dist && cross-env DEBUG=* npm-run-all -p start:firefox start:webpack:dev",
    "start:webpack:dev": "cross-env NODE_ENV=development webpack --config webpack/webpack.config.ts --mode=development --watch",
    "start:chrome": "wait-on dist/background.js && web-ext run --target=chromium --watch-file='./dist/background.js' --source-dir='./dist'",
    "start:firefox": "wait-on dist/background.js && web-ext run --source-dir ./dist",
    "tsc": "tsc -p . --noEmit",
    "pack": "web-ext build -o -s ./dist -a ./web-ext-artifacts",
    "pack:extract": "unzip -o -q './web-ext-artifacts/*.zip' -d ./web-ext-artifacts/extracted-extension",
    "prebuild": "yarn run clean:dist",
    "build": "yarn run start:webpack:prod && yarn run pack",
    "build:production": "yarn build",
    "lint": "eslint --ext ts --ext tsx --ext md .",
    "lint:fix": "yarn run lint --fix",
    "prettier": "prettier '**/*.{ts,tsx}' --write",
    "clean": "yarn run clean:dist",
    "clean:dist": "rimraf dist web-ext-artifacts"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@getstation/eslint-plugin-markdown": "1.0.2-rc.0",
    "@types/chrome": "^0.0.106",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/firefox-webext-browser": "^70.0.1",
    "@types/html-webpack-plugin": "^3.2.2",
    "@types/node": "^12.12.37",
    "@types/web-locks-api": "^0.0.0",
    "@types/webpack": "^4.41.12",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "replace-in-file": "^6.0.0",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.8.3",
    "wait-on": "^4.0.2",
    "web-ext": "^4.2.0",
    "webextension-polyfill": "^0.6.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^4.2.2"
  }
}
